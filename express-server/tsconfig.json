{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "src",
    "types": ["jest", "node", "@types/jest"]
  },
  "include": ["src/**/*.ts" ],
  "exclude": ["node_modules"]
}
